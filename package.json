{
  "name": "statustick-api",
  "version": "1.0.0",
  "description": "Website Monitoring & Alert System",
  "author": "Mustafa Berberolg <mustafaberberoglu@gmail.com>",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=8.2.1",
    "npm": ">=5.3.0",
    "yarn": ">=0.27.5"
  },
  "scripts": {
    "start": "node index.js",
    "start:debug": "cross-env DEBUG=statustick-api:* yarn start",
    "start:worker:all": "yarn start:worker:drone-checker & yarn start:worker:task-runner & yarn start:worker:alert-sender",
    "start:worker:drone-checker": "node worker/drone-checker/index.js",
    "start:worker:task-runner": "node worker/task-runner/index.js",
    "start:worker:alert-sender": "node worker/alert-sender/index.js",
    "start:full": "yarn start & yarn start:worker:all",
    "lint": "esw *.js server config worker --color",
    "precommit": "yarn lint && yarn test",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors server worker --recursive --exit",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors server worker --recursive --exit",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:statustick/statustick-api.git"
  },
  "keywords": [
    "statuscake",
    "website",
    "monitoring",
    "uptime"
  ],
  "dependencies": {
    "axios": "0.17.1",
    "bcrypt": "1.0.3",
    "bluebird": "3.5.1",
    "body-parser": "1.18.2",
    "bull": "3.3.8",
    "compression": "1.7.1",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "cron-cluster": "^1.0.0",
    "crypto-js": "^3.1.9-1",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "express": "4.16.2",
    "express-jwt": "5.3.0",
    "express-validation": "1.0.2",
    "express-winston": "2.4.0",
    "helmet": "3.9.0",
    "http-status": "^1.0.1",
    "joi": "13.1.0",
    "joi-timezone": "2.0.0",
    "jsonwebtoken": "8.1.0",
    "lodash": "4.17.4",
    "mathjs": "3.19.0",
    "method-override": "^2.3.10",
    "moment-timezone": "0.5.14",
    "mongoose": "4.13.9",
    "morgan": "1.9.0",
    "node-rsa": "0.4.2",
    "node-uuid": "1.4.8",
    "npm-check-updates": "^2.14.0",
    "pm2": "^2.9.1",
    "redis": "^2.8.0",
    "spdy": "3.4.7",
    "speakingurl": "14.0.1",
    "util": "0.10.3",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "5.1.3",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-watch": "3.1.3",
    "husky": "^0.14.3",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "4.1.0",
    "nock": "9.1.6",
    "supertest": "3.0.0",
    "supertest-as-promised": "4.0.2",
    "validate-commit-msg": "^2.14.0"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
